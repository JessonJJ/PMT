<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.jj.pmt.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_id_PARTIAL_wakelock"
            android:text="@string/btn_PARTIAL_wakelock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="button_click_PARTIAL_wakelock"/>

        <Button
            android:id="@+id/button_id_FULL_wakelock"
            android:text="@string/btn_FULL_wakelock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="button_click_FULL_wakelock"/>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
